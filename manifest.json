{
  "manifest_version": 3,
  "name": "WACopyMate",
  "version": "1.0",
  "action": {
    "default_icon": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  "minimum_chrome_version": "93",
  "background": {
  "service_worker": "background.js",
  "type": "module"
   },
  "options_page": "options.html",
  "permissions": [
    "activeTab",
    "clipboardWrite",
    "scripting",
    "offscreen",
    "storage"
  ],
  "host_permissions": [
    "https://web.whatsapp.com/*"
  ]
}
